.tags-container
    .tag(
        ng-if="tag.color"
        ng-repeat="tag in vm.tags"
        ng-style="{'border-left': '.3rem solid' + tag.color}"
    )
        tg-tag(
            tag="tag"
            project="vm.project"
            on-delete-tag="vm.deleteTag(tag)"
            has-permissions="{{vm.checkPermissions()}}"
        )
    .tag(
        ng-if="!tag.color"
        ng-repeat="tag in vm.tags"
    )
        tg-tag(
            tag="tag"
            on-delete-tag="vm.deleteTag(tag)"
            has-permissions="{{vm.checkPermissions()}}"
        )

include ../components/add-tag-button
include ../components/add-tag-input
