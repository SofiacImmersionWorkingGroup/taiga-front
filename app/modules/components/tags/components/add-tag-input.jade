.add-tag-input(
    novalidate
    ng-if="vm.addTag && vm.checkPermissions()"
    ng-keydown="vm.closeTagInput($event)"
    tg-loading="vm.loadingAddTag"
)
    input.tag-input(
        type="text"
        placeholder="{{'COMMON.TAGS.PLACEHOLDER' | translate}}"
        autofocus
        ng-model="addTag.name"
        ng-model-options="{debounce: 200}"
    )
    ul.tags-dropdown(
        ng-show="addTag.name.length"
    )
        li(ng-repeat="tag in vm.colorArray | filter: addTag.name")
            tg-tag-option.tags-dropdown-option(
                name="{{tag[0]}}"
                color="{{tag[1]}}"
                ng-click="vm.onAddTag({name: tag[0], color: tag[1]})"
            )
    tg-color-selector(
        selected-color="vm.selectedColor"
    )
    tg-svg.save(
        ng-show="addTag.name.length"
        svg-icon="icon-save"
        svg-title-translate="COMMON.TAGS.ADD"
        ng-click="vm.onAddTag({name: addTag.name, color: vm.selectedColor})"
    )
